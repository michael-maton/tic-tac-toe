{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "allowJs": true,
    "useUnknownInCatchVariables": false,
    "paths": {
      "@assets/*": ["assets/*"],
      "@components": ["src/components"],
      "@config/*": ["src/config/*"],
      "@contexts/*": ["src/contexts/*"],
      "@screens": ["src/screens"],
      "@utils": ["src/utils"]
    }
  }
}
